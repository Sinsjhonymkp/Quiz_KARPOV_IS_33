<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    style="@style/Theme.Quiz"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/photo_2022_12_01_20_41_25" />

    <TextView
        android:id="@+id/textView2"
        style="@style/TextViewStyle"
        android:layout_width="341dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/lodger"
        android:text="Тема викторины"
        android:textSize="25dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.019" />

    <ImageButton
        android:id="@+id/bioButton"
        android:layout_width="207dp"
        android:layout_height="193dp"
        android:layout_marginEnd="4dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="@string/app_name"
        android:onClick="OnClick3"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.203"
        app:srcCompat="@drawable/bio2" />

    <ImageButton
        android:id="@+id/geoButton"
        android:layout_width="207dp"
        android:layout_height="193dp"
        android:backgroundTint="#007E7272"
        android:contentDescription="@string/app_name"
        android:onClick="Onclick2"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/bioButton"
        app:layout_constraintEnd_toStartOf="@+id/bioButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bioButton"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/geo2" />

    <ImageButton
        android:id="@+id/mathButton3"
        android:layout_width="207dp"
        android:layout_height="193dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="@string/app_name"
        android:onClick="OnClick4"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/geoButton"
        app:layout_constraintVertical_bias="0.137"
        app:srcCompat="@drawable/math2" />

    <TextView
        android:id="@+id/textView3"
        style="@style/TextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="МАТЕМАТИКА"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/mathButton3"
        app:layout_constraintEnd_toEndOf="@+id/bioButton"
        app:layout_constraintHorizontal_bias="0.173"
        app:layout_constraintStart_toStartOf="@+id/geoButton"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView9"
        style="@style/TextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ИСТОРИЯ"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/historyButton"
        app:layout_constraintEnd_toEndOf="@+id/bioButton"
        app:layout_constraintHorizontal_bias="0.843"
        app:layout_constraintStart_toStartOf="@+id/geoButton"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView4"
        style="@style/TextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="4dp"
        android:text="БИОЛОГИЯ"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/bioButton"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/bioButton"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView5"
        style="@style/TextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:text="ГЕОГРАФИЯ"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/geoButton"
        app:layout_constraintEnd_toStartOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.936" />

    <TextView
        android:id="@+id/statView2"
        style="@style/TextViewStyle"
        android:layout_width="399dp"
        android:layout_height="116dp"
        android:text="Результат:"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mathButton3"
        app:layout_constraintVertical_bias="0.051" />

    <ImageView
        android:id="@+id/aboutprogramm"
        android:layout_width="92dp"
        android:layout_height="86dp"
        android:layout_marginTop="4dp"
        android:contentDescription="@string/about_program"
        android:onClick="Onclick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statView2"
        app:srcCompat="@drawable/aboutprogram" />

    <TextView
        android:id="@+id/textView"
        style="@style/TextViewStyle"
        android:layout_width="235dp"
        android:layout_height="42dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="24dp"
        android:text="О программе:"
        android:textColor="@color/red"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/aboutprogramm"
        app:layout_constraintHorizontal_bias="0.166"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/statView2" />

    <ImageButton
        android:id="@+id/historyButton"
        android:layout_width="205dp"
        android:layout_height="193dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="@string/about_program"
        android:onClick="onClick5"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/statView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/mathButton3"
        app:layout_constraintTop_toBottomOf="@+id/bioButton"
        app:layout_constraintVertical_bias="0.833"
        app:srcCompat="@drawable/history" />

</androidx.constraintlayout.widget.ConstraintLayout>